@model Opinion

<form asp-action="Index" method="post" role="form">

    <div class="form-group row">
        <label asp-for="UserName" class="col-md-2 col-form-label"></label>
        <div class="col-md-5">
            <input asp-for="UserName" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-md-2 col-form-label"></label>
        <div class="col-md-5">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Message" class="col-md-2 col-form-label"></label>
        <div class="col-md-5">
            <textarea asp-for="Message" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="WaitingForResponse" class="col-md-2"></label>
        <div class="col-md-5">
            <input type="checkbox" asp-for="WaitingForResponse" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-dark" value="Send feedback!" />
        </div>
    </div>

</form>
