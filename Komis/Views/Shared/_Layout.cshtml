<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap-4.0.0-dist/css/bootstrap.css" rel="stylesheet"/>
    <link href="~/content/site.css" rel="stylesheet"/>

    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-dark navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index" class="navbar-brand">Komis</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <div class="row">
            @RenderBody()
            @*RenderBody() renderuje w tym miejscu widok, ktory dziedziczy po schemacie _Layout (renderuje widok dziedziczacy) *@
        </div>
    </div>
</body>
</html>
