@model Car

<div>
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-6">
                <img alt="@Model.Mark" src="@Model.MiniImageUrl" height="500" width="500" />
            </div>
            <div class="col-md-6">
                <h3>@Model.Mark - @Model.Model</h3>
                <h4>@Model.Price</h4>
                <h4>@Model.ProductionDate</h4>
                <h4>@Model.Mileage</h4>
                <h4>@Model.EngineCapacity</h4>
                <h4>@Model.Power</h4>
                <p>@Model.CarDescription</p>
                <h2>Are you sure you want to delete this car?</h2>
                <div class="pull-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CarId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>